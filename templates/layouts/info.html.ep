<div id='flash-messages'>
    <% if (my $msg = flash('info')) { %>
    <div class="alert-info alert fade in"><button class="close" data-dismiss="alert">x</button><span><%= $msg %></span></div>
    % }
    <% if (my $msg = flash('error')) { %>
    <div class="alert-warning alert fade in"><button class="close" data-dismiss="alert">x</button><span><%= $msg %></span></div>
    % }
</div>
