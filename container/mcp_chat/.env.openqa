#=====================================================================#
#                LibreChat + openQA MCP Configuration                 #
#=====================================================================#
# IMPORTANT: Copy this file to .env and edit the values below        #
#   cp .env.openqa .env                                               #
#=====================================================================#

#==================================================#
#               Server Configuration               #
#==================================================#

HOST=0.0.0.0
PORT=3080
MONGO_URI=mongodb://mongodb:27017/LibreChat
DOMAIN_CLIENT=http://localhost:3080
DOMAIN_SERVER=http://localhost:3080
NO_INDEX=true
TRUST_PROXY=1

#==================================================#
#            User ID/Group ID for Podman           #
#==================================================#
# Run `id` to get your UID and GID

UID=1000
GID=1000

#==================================================#
#                  AI Endpoints                    #
#==================================================#
# Set to 'user_provided' to let users enter their own keys

ANTHROPIC_API_KEY=user_provided
OPENAI_API_KEY=user_provided
GOOGLE_KEY=user_provided
ASSISTANTS_API_KEY=user_provided
# GROQ_API_KEY=
# MISTRAL_API_KEY=
# OPENROUTER_KEY=

#==================================================#
#                   Search                         #
#==================================================#

SEARCH=true
MEILI_NO_ANALYTICS=true
MEILI_HOST=http://meilisearch:7700
# Generate: openssl rand -base64 32
MEILI_MASTER_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY

#==================================================#
#                       RAG                        #
#==================================================#

RAG_PORT=8000

#==================================================#
#              Registration and Login              #
#==================================================#

# Disable email verification - allow login without verified email
ALLOW_EMAIL_LOGIN=true
ALLOW_REGISTRATION=true
ALLOW_SOCIAL_LOGIN=false
ALLOW_SOCIAL_REGISTRATION=false
ALLOW_PASSWORD_RESET=false
ALLOW_UNVERIFIED_EMAIL_LOGIN=true

# Guest user credentials (for reference when running create-user)
# Email: o3-mcp-read-only@open.qa
# Password: readonly
# Username: o3-mcp-read-only

SESSION_EXPIRY=1000 * 60 * 15
REFRESH_TOKEN_EXPIRY=(1000 * 60 * 60 * 24) * 7

# IMPORTANT: Generate new secrets for production!
# Generate with: openssl rand -hex 32
JWT_SECRET=CHANGE_THIS_GENERATE_WITH_openssl_rand_hex_32
JWT_REFRESH_SECRET=CHANGE_THIS_GENERATE_WITH_openssl_rand_hex_32
CREDS_KEY=CHANGE_THIS_GENERATE_WITH_openssl_rand_hex_32
CREDS_IV=CHANGE_THIS_GENERATE_WITH_openssl_rand_hex_16

#==================================================#
#                   Moderation                     #
#==================================================#

OPENAI_MODERATION=false
BAN_VIOLATIONS=true
BAN_DURATION=1000 * 60 * 60 * 2
BAN_INTERVAL=20
LIMIT_CONCURRENT_MESSAGES=true
CONCURRENT_MESSAGE_MAX=2
LIMIT_MESSAGE_IP=true
MESSAGE_IP_MAX=40
MESSAGE_IP_WINDOW=1

#==================================================#
#                        UI                        #
#==================================================#

APP_TITLE=LibreChat + openQA
HELP_AND_FAQ_URL=https://open.qa
ALLOW_SHARED_LINKS=true
ALLOW_SHARED_LINKS_PUBLIC=true

#==================================================#
#              openQA MCP Integration              #
#==================================================#
# Get your API token from your openQA instance
# Settings -> API Keys -> Create new key

#OPENQA_API_TOKEN=YOUR_OPENQA_API_TOKEN_HERE
